<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/lable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:paddingBottom="30dp"
        android:text="找回你的密码！"
        android:textColor="@color/white"
        android:textSize="50dp"
        android:textStyle="bold">

    </TextView>

    <TextView
        android:id="@+id/text_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lable"
        android:layout_marginTop="40dp"
        android:paddingLeft="20dp"
        android:text="邮箱"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold">

    </TextView>

    <EditText
        android:id="@+id/email_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_email"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:textSize="20dp">

    </EditText>

    <TextView
        android:id="@+id/text_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/email_edit"
        android:layout_marginTop="30dp"
        android:layout_marginRight="200dp"
        android:paddingLeft="20dp"
        android:text="验证码"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold">

    </TextView>

    <EditText
        android:id="@+id/code_edit"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_code"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:textSize="20dp"></EditText>

    <TextView
        android:id="@+id/new_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/code_edit"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"
        android:text="新密码"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold">

    </TextView>

    <EditText
        android:id="@+id/new_password_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/new_password"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:textSize="20dp"
        android:inputType="textPassword">

    </EditText>


    <Button
        android:id="@+id/button_code"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_alignBottom="@id/code_edit"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/code_edit"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:text="获取"
        android:textSize="20dp" />


    <Button
        android:id="@+id/button_find"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/new_password_edit"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/btn_shape"
        android:text="修改密码"
        android:textSize="25dp" />







</RelativeLayout>