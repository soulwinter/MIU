<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/lable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:paddingBottom="30dp"
        android:text="觅游，\n只差一步！"
        android:textColor="@color/white"
        android:textSize="50dp"
        android:textStyle="bold">

    </TextView>

    <TextView
        android:id="@+id/text_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lable"
        android:layout_marginTop="40dp"
        android:paddingLeft="20dp"
        android:text="设置用户名"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold">

    </TextView>

    <EditText
        android:id="@+id/name_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_name"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:textSize="20dp">

    </EditText>

    <TextView
        android:id="@+id/text_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_edit"
        android:layout_marginTop="30dp"
        android:layout_marginRight="200dp"
        android:paddingLeft="20dp"
        android:text="设置密码"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold">

    </TextView>

    <EditText
        android:id="@+id/pwd_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_pwd"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:textSize="20dp"
        android:inputType="textPassword"></EditText>

    <TextView
        android:id="@+id/text_pwd2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pwd_edit"
        android:layout_marginTop="30dp"
        android:layout_marginRight="200dp"
        android:paddingLeft="20dp"
        android:text="重复密码"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold">

    </TextView>

    <EditText
        android:id="@+id/pwd_edit2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_pwd2"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:textSize="20dp"
        android:inputType="textPassword"></EditText>


    <Button
        android:id="@+id/button_start"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/pwd_edit2"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/btn_shape"
        android:text="开始觅游"
        android:textSize="25dp" />


</RelativeLayout>