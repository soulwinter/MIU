<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".testA">

    <Button
        android:id="@+id/button_add_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="addArea"
        >
    </Button>

    <Button
        android:id="@+id/button_add_ap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="addap"
        android:layout_below="@+id/button_add_area"
        >
    </Button>

    <Button
        android:id="@+id/button_add_wifiRecord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="addwifirecord"
        android:layout_below="@id/button_add_ap"
        >
    </Button>

</RelativeLayout>